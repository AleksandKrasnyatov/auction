{
    "name": "pet-project/auction",
    "type": "project",
    "license": "BSD-3-Clause",
    "config": {
      "process-timeout": 0,
      "sort-packages": true
    },
    "require": {
        "php": "^7.4",
        "ext-json": "*",
        "php-di/php-di": "^6.0",
        "slim/psr7": "^1.6",
        "slim/slim": "^4.15",
        "symfony/console": "^5.4"
    },
    "require-dev": {
        "overtrue/phplint": "^3.4",
        "phpunit/phpunit": "^8.5",
        "roave/security-advisories": "dev-master",
        "squizlabs/php_codesniffer": "^4.0",
        "vimeo/psalm": "^3.8"
    },
    "autoload": {
      "psr-4": {
        "App\\": "src/"
      }
    },
    "autoload-dev": {
      "psr-4": {
        "Test\\": "tests/"
      }
    },
    "scripts": {
      "lint": "phplint",
      "cs-check": "phpcs",
      "cs-fix": "phpcbf",
      "psalm": "psalm",
      "test": "phpunit --colors=always",
      "app": "php bin/app.php --ansi"
    }
}
